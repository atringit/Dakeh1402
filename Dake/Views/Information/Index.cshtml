@model PagedList.Core.IPagedList<Dake.Models.Information>
<div class="row">
	<div class="col-xs-12">
		<div class="box">
			<div class="box-header">
				<h3 class="box-title">اطلاعیه ها</h3>

			</div>
			<!-- /.box-header -->
			<div class="box-body  table-responsive">
				<a class="btn btn-default" href="/Information/Create" style="margin-bottom:5px"> ثبت جدید</a>
				<table id="example2" class="table table-bordered table-hover">
					<thead>
                        <tr>
                            <th>عنوان</th>
                            <th>متن</th>
                            <th>لینک</th>
                            <th>تصاویر</th>

                            <th>امکانات</th>
                        </tr>
					</thead>
					<tbody>
						@foreach (var item in Model)
						{
                        <tr>
                            <td>@item.title</td>
                            <td>@item.description</td>
                            <td>@item.Link</td>
                            <td>
                                @foreach (var item2 in item.InformationMedias)
                                {
                        <img src="@item2.Image" style="margin:5px;width:50px;height:60px" />}
                            </td>
                            <td><a href="/Information/Edit/@item.id" class="btn btn-default">ویرایش</a></td>
                            <td><a href="/Information/Remove/@item.id" class="btn btn-default">حذف</a></td>
                        </tr>
						}

					</tbody>
					<tfoot>
					</tfoot>
				</table>
			</div>
			<!-- /.box-body -->
			<div class="row">
				<div class="col-sm-5">
				</div>
				<div class="col-sm-7">
					<div class="dataTables_paginate paging_simple_numbers" id="example1_paginate">
						<ul class="pagination">
							@*@for (int i = 1; i <= Model.PageCount; i++)
								{
									<li class="paginate_button  @((i==Model.CurrentPage?"active":""))">
										<a href="/Admin/Users?pageId=@i" aria-controls="example1" data-dt-idx="1" tabindex="0">@i</a>
									</li>
								}*@
							<li>
								<pager list="@Model" asp-controller="Information" asp-action="Index" />
							</li>
						</ul>
					</div>
				</div>
			</div>
		</div>

	</div>
	<!-- /.col -->
</div>




@section Scripts
    {
	@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

}