@model Dake.Models.PaymentRequest
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="jumbotron">
    <h1>تست پذیرنده درگاه پرداخت اینترنتی</h1>
</div>
@if (ViewBag.Message != null)
{
    <div class="alert alert-danger" style="direction: ltr">
        <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
        @ViewBag.Message
    </div>
}
@using (Html.BeginForm())
{
    <div class="row">
        <div class="col-md-4">
            @Html.LabelFor(t => t.MerchantId)
        </div>
        <div class="col-md-8">
            <input name="MerchantId" />
            @*@Html.TextBoxFor(t => t.MerchantId)*@
        </div>
    </div>
    <div class="clr"></div>
    <div class="row">
        <div class="col-md-4">
            @Html.LabelFor(t => t.TerminalId)

        </div>
        <div class="col-md-8">
            @*@Html.TextBoxFor(t => t.TerminalId)*@
            <input name="TerminalId"  />
        </div>
    </div>
    <div class="clr"></div>
    <div class="row">
        <div class="col-md-4">
            @Html.LabelFor(t => t.MerchantKey)
        </div>
        <div class="col-md-8">
            @*@Html.TextBoxFor(t => t.MerchantKey)*@
            <input name="MerchantKey"  />
        </div>
    </div>
    <div class="clr"></div>
    <div class="row">
        <div class="col-md-4">
            @Html.LabelFor(t => t.Amount)
        </div>
        <div class="col-md-8">
            @Html.TextBoxFor(t => t.Amount)
        </div>
    </div>
    <div class="clr"></div>
    <div class="row">
        <div class="col-md-4">
            @Html.LabelFor(t => t.PurchasePage)
        </div>
        <div class="col-md-8">
            <input name="PurchasePage" value="https://sadad.shaparak.ir" />
            @*@Html.TextBoxFor(t => t.PurchasePage)*@
        </div>
    </div>

    <div class="row" style="text-align:center;">
        <input type="submit" value="ارسال" class="btn btn-primary" style="margin:0 auto;width:100px;" />
    </div>
}