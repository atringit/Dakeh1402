                                    @*@if (item.isActive)
        {
            <a onclick="Active(@item.id)" class="btn btn-danger">غیر فعال کردن</a>
        }
        else
        {
            <a onclick="Active(@item.id)" class="btn btn-default">فعال کردن</a>

        }*@
                                </td>
                                <td>@item.Acceptcount</td>
                                <td>@item.NotAcceptcount</td>
                            </tr>
                        }


                    </tbody>
                    <tfoot>

                    </tfoot>
                </table>
