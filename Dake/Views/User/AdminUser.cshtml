@model Dake.Utility.UserAdmin

<section class="content">
    <div class="row">
        <!-- left column -->
        <div class="col-md-12">
            <!-- general form elements -->
            <div class="box box-primary">
                <div class="box-header with-border">
                    <h3 class="box-title">ویرایش کاربر ادمین</h3>
                </div>
                <div class="row">
                    <h3 style="color:green" class="col-md-6">@ViewData["passwordChanged"]</h3>
                </div>
                    <form asp-action="AdminUser" method="post" enctype="multipart/form-data">
                        <div class="box-body">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="row">

                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="control-label">رمز عبور فعلی</label>
                                        <input asp-for="passwordShow" class="form-control" />
                                        <span asp-validation-for="passwordShow" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                            <div class="row">

                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="control-label">رمز عبور جدید</label>
                                        <input asp-for="newPasswordShow" class="form-control" />
                                        <span asp-validation-for="newPasswordShow" class="text-danger"></span>

                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="control-label">تکرار رمز عبور</label>
                                        <input asp-for="reNewPasswordShow" class="form-control" />
                                        <span asp-validation-for="reNewPasswordShow" class="text-danger"></span>

                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <input type="submit" value="تایید" class="btn btn-default" />
                                        <a class="btn btn-danger" asp-action="Index">بازگشت</a>
                                    </div>
                                </div>
                            </div>
                        </div>
</form>
                </div>
            </div>
        </div>
    
</section>
@section Scripts
    {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
       
}
