@model Dake.Models.User

<section class="content">
    <div class="row">
        <!-- left column -->
        <div class="col-md-12">
            <!-- general form elements -->
            <div class="box box-primary">
                <div class="box-header with-border">
                    <h3 class="box-title">ویرایش کاربر</h3>
                </div>
                <div class="row">
                    <form asp-action="Edit" method="post" enctype="multipart/form-data">
                        <div class="box-body">

                            <input type="hidden" asp-for="id" />
                            <input type="hidden" asp-for="roleId" />
                            <input type="hidden" asp-for="password" />
                            <input type="hidden" asp-for="token" />
                          

                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label class="control-label">کد</label>
                                    <input asp-for="code" readonly class="form-control" />
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label class="control-label">رمز عبور</label>
                                    <input asp-for="passwordShow" readonly class="form-control" />
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label class="control-label">همراه</label>
                                    <input asp-for="cellphone" readonly class="form-control" />
                                </div>
                            </div>
                            
                           
                            <div class="col-md-6">
                                <div class="form-group">
                                    <input type="submit" value="تایید" class="btn btn-default" />
                                    <a class="btn btn-danger" asp-action="Index">بازگشت</a>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>
@section Scripts
    {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
        <script>
           

            function LoadAdvisors(e) {
                var valueSelected = e.value;
                $.ajax({
                    type: "GET",
                    url: "/User/LoadAdvisors?majorId=" + valueSelected,
                    async: false,
                    success: function (text) {
                        $("#adv").html("");
                        $("#adv").html(text);

                        
                    }
                });
            }
        </script>
}
