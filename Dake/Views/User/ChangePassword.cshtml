<div class="row">
    <div class="col-xs-12">
        <div class="box">
            <div class="box-header">
                <h3 class="box-title">تغییر رمز</h3>
            </div>
            <div class="row">
                <form action="/User/ChangePassword" method="post">
                    <div class="box-body">
                        <div class="col-md-4 form-group">
                            <input type="password" name="OldPassword" class="form-control" placeholder="رمز قدیمی" />
                        </div>
                         <div class="col-md-4 form-group">
                            <input type="password" name="NewPassword" class="form-control" placeholder="رمز جدید" />
                        </div>
                        <div class="col-md-1 form-group">
                            <button type="submit" class="btn btn-default">تغییر رمز</button>
                        </div>
                        <span class="text-danger">@ViewBag.Error</span>
                    </div>
                </form>

            </div>
        </div>

    </div>
</div>
